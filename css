/* ============================= */
/* Responsividade (Celulares)   */
/* ============================= */
@media (max-width: 768px) {
  nav ul {
    flex-direction: column; /* Coloca os links do menu em coluna */
  }

  .links-contato {
    flex-direction: column; /* Botões de contato empilhados */
    align-items: center; /* Centraliza os botões */
  }
}

